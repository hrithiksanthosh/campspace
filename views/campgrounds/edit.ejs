<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">Edit campgrounds</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%=campgrounds._id%>?_method=put"
      method="post"
      novalidate
      class="Validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Tilte</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%=campgrounds.title%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%=campgrounds.location%>"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price"> Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Username"
            aria-describedby="price-label"
            name="campground[price]"
            value="<%=campgrounds.price%>"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Add image.</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <% campgrounds.images.forEach(function(img,i){%>
        <img
          crossorigin="anonymous"
          src="<%=img.thumbnail%>"
          class="img-thumbnail"
          alt=""
        />
        <div class="form-check-inline">
          <input type="checkbox" id="image-<%=i%>"" name="deleteImages[]"
          value="<%=img.filename%>">
        </div>
        <label for="image-<%=i%>">Delete?</label>

        <%})%>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="image"
          name="campground[description]"
          required
        >
        <%=campgrounds.description %></textarea
        >
      </div>
      <button class="btn btn-success">Update campground</button>
    </form>
    <a href="/campgrounds/<%= campgrounds._id%>">Back to Camgprounds</a>
  </div>
</div>
