<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New campgrounds</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="Validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Tilte</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price"> Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="Username"
            aria-describedby="price-label"
            name="campground[price]"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Choose Image...</label>
        <input
          class="form-control"
          type="file"
          name="image"
          id="image"
          multiple
        />
      </div>
      <!-- <input type="file" name="image" id="" multiple /> -->

      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />
      </div> -->
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="image"
          name="campground[description]"
          required
        ></textarea>
      </div>
      <button class="btn btn-primary">Add campground</button>
    </form>
    <a href="/campgrounds">All Camgprounds</a>
  </div>
</div>
